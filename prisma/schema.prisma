generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


// UserState


// Quiz
// Quiz Category
model QuizCategory {
  id        String          @id @default(uuid())
  name      String          @unique
  level     String          @default("easy")
  questions QuizQuestion[]

  @@map("quiz_categories")
}

// Quiz Question
model QuizQuestion {
  id         String       @id @default(uuid())
  question   String
  options    Json
  answer     String
  level      String        // easy | medium | hard
  timer      Int
  categoryId String
  category   QuizCategory @relation(fields: [categoryId], references: [id])

  @@map("quiz_questions")
}

